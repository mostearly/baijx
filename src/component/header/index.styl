.header{
  padding 40px 200px
}
.site__logo{
  width 60px
  display inline-block
  vertical-align middle
}
.site__title{
  display inline-block
  margin-left 40px
  font-size 1.28rem
}
.headband{
  height 3px
  background #222
  position fixed
  width 100%
  top 0
  left 0
  z-index 1001
}
.menu{
  display inline-block
  margin-left 40px
  .menu__list{
    list-style none
    padding 0
    .menu__item{
      margin 0 20px
      display inline-block
      a{
        color #888
        text-decoration none
        padding 4px
        letter-spacing 2px
        &:hover{
          color #111
        }
      }
    }
    .menu__item__active{
      a{
        color #111
        border-bottom 1px dashed #ccc
        border-top 1px dashed #ccc
      }
    }
  }
}
