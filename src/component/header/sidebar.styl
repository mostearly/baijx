.sidebar{
  .sidebar__menu{
    width 3em
    height 3em
    padding .5em
    border none
    margin-top 10px
    outline none
    background-color transparent
    &:active{
      svg{
        path{
          fill #000
        }
      }
    }
    svg{
      width 100%
      height 100%
      path{
        fill #404040
      }
    }
  }
  .sidebar__container{
    position fixed
    height 100%
    background-color #fff
    top 0
    left 0
    transform translateX(-100vw)
    z-index 999
    box-sizing border-box
    padding 20px
    overflow hidden
    box-shadow 2px 0 20px 0 #6666669e
    transition transform .3s ease-in
    @media screen and (max-width 800px){
      width 40%
    }
    @media screen and (max-width 750px){
      width 70%
    }
  }
  .sidebar__container__open{
    transform translateX(0)
  }
  .site__title{
    font-size 1.28rem
    margin-top 40px
  }
  .menu{
    .menu__list{
      list-style none
      padding 0
      .menu__item{
        margin 20px
        a{
          color #888
          text-decoration none
          padding 4px
          letter-spacing 2px
          &:hover{
            color #111
          }
        }
      }
      .menu__item__active{
        a{
          color #111
          border-bottom 1px dashed #ccc
          border-top 1px dashed #ccc
        }
      }
    }
  }
  .banner{
    width 100%
    height 200px
    margin 0 auto
    padding 20px
    margin -20px
    background-image url("https://source.unsplash.com/random/375x200?nature,water,mountain,flowers,fruits")
    background-position center
    background-repeat no-repeat
    background-size cover
  }
}
