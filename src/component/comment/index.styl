@import "~@/assets/styles/variable.styl"
.comments {
  display block
  margin-top 6em
}

.closed-tips {
  font-size 1.25rem
  color $color_5
  text-align center
  font-weight normal
  user-select none
}

.comment-title {
  font-size 1rem
  padding 10px 0
  text-align center
  font-weight normal
  color $color_3
  border-bottom 1px solid $color_4
  user-select none

  i {
    margin 0 14px 0 8px
    color $color_5
  }
}

.comment-tips{
  font-size 1em
  color $color_5
  margin-top 2em
  text-align center
}
.comment-list {
  width 100%
  margin-top 2em
  font-size .875rem
  .item {
    display flex
    flex-wrap wrap
    border-bottom 1px solid $color_4
    padding 2em 0
    margin 1em 0

    &:target {
      border-bottom 1px solid $color_4
    }

    &:last-of-type {
      border-bottom none
    }
  }

  .avatar {
    display inline-block
    width 2.8rem
    height 2.8rem
    padding .2rem
    border 1px solid $color_4
    border-radius 50%
    vertical-align top
    margin-right 8px

    img {
      width 100%
      height 100%
      border-radius 50%
    }
  }

  .metadata {
    display inline-block
    padding 8px
    vertical-align top
    flex 1

    cite {
      color $color_1
      display block
      font-style normal

      a {
        display inline-block
        color $color_1
      }

      .says {
        font-size .875rem
        margin-left 8px
        color $color_3
        user-select none
      }
    }

    time {
      font-size .875rem
      color $color_3
    }
  }

  .actions {
    display inline-block
    padding 8px

    .reply {
      background-color transparent
      color $color_3
      border 0
      outline 0
      cursor pointer
      font-family inherit
      font-size .875rem
      user-select none

      &:hover {
        color $color_1
      }
    }
  }

  .content {
    color $color_3
    font-size 1rem
    width 100%
    margin 1em 8px
    .emoji{
      height 1.8em
      vertical-align text-bottom
      margin 0 2px
      transition transform .3s linear
      &:hover {
        transform translateY(-2px)
      }
    }
  }

  .at {
    color $color_1
    font-size .875rem
  }
}

.list-children {
  display block
  margin-left 2rem

  .list-children {
    margin 0
  }
}

.form {
  .note, .info {
    font-size .875rem
    color $color_3
  }

  .info {
    height 20px
    overflow hidden
    opacity 1
    transition all .3s ease-in-out
  }

  .info__hide {
    height 0
    opacity .6
  }
  setStatusColor(color) {
    color color
    :global {
      .icon {
        fill color
      }
    }
  }

  .info__error {
    setStatusColor(#fc6470)
  }

  .info__success {
    setStatusColor(#1eca5a)
  }

  &-item {
    margin 10px 0

    label {
      display block
      font-size .875rem
      color $color_3
      margin 2em 0 1em
      user-select none
    }

    input {
      line-height 20px
      width 30%
      @media screen and (max-width: 890px) {
        width 60%
      }
      padding .6em
    }

    textarea {
      min-height 8.75rem
      resize none
      box-sizing border-box
      width 100%
      margin-bottom 10px
      font-family inherit
      padding 10px
    }

    input, textarea {
      font-size .875rem
      color $color_3
      outline 0
      border-radius 4px
      font-family inherit
      border 1px solid $color_5

      &:focus {
        border 1px solid $color_1
      }
      &:focus-within {
        border 1px solid $color_1
      }

      &::placeholder {
        opacity .8
      }
    }
  }

  &-reply {
    width 100%
  }

  &-comment {
    padding 2em 0
  }

  .emoji-list {
    overflow-x scroll
    white-space nowrap
    padding-top 8px
    user-select none
    &::-webkit-scrollbar {
      height 6px
    }

    &::-webkit-scrollbar-thumb {
      background: $color_5
    }
  }
  .emoji-item {
    display inline-block
    height 1.8em
    margin 0 8px
    cursor pointer
    opacity .8
    transition opacity .3s linear, transform .3s linear
    &:hover {
      transform translateY(-2px)
      opacity 1
    }
    img {
      height 100%
      pointer-events none
    }
  }

  button[type="submit"] {
    padding .6em 2.8em
    outline 0
    border-radius 4px
    color $color_4
    border 1px solid $color_1
    background-color $color_1
    cursor pointer
    letter-spacing 4px
    opacity .89

    &:hover {
      opacity 1
    }
  }

  button[type="reset"] {
    background-color transparent
    margin-left 8px
    border 0
    outline 0
    font-family inherit
    color $color_3
    cursor pointer

    &:hover {
      color $color_2
    }
  }
}
