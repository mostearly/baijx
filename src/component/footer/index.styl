.footer{
  position: absolute
  left: 0
  bottom: 0
  width: 100%
  min-height: 50px
  margin-top: 80px
  color: #666
  .footer__inner{
    padding 20px 280px
    border-top 1px solid #eee
    font-size 14px
  }
  .footer__inner_mobile{
    padding 20px
    border-top 1px solid #eee
    font-size 14px
  }
  a{
    border-bottom: 1px solid #999
    color: #555
    text-decoration: none
    outline: none
    margin-right 10px
    word-wrap: break-word
  }
  a:hover{
    border-bottom: 1px solid #333
  }
  .copyright{
    i{
      font-size 16px
      margin-right 4px
      font-family "PingFang SC Medium"
      font-style normal
    }
    span{
      margin-right 4px
    }
  }
  .powered__by{
    span{
      margin-right 4px
    }
  }
  .site__data{

  }
}
