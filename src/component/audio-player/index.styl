@import "~@/assets/styles/common.styl"

.audio-player{
  width 104%
  margin 1em 1em 1em -2%
  padding 20px
  box-sizing border-box
  //background-color #F5F5F5
  display flex
}
.audio-left{
  width 56px
  height 56px
  margin-right 20px
  position relative
  padding 12px
  background-size 100%
  background-repeat no-repeat
  animation rotating 37s linear infinite
  background-color #000
  border-radius: 50%
  background-blend-mode: hard-light
  box-shadow: 0 4px 5px -4px #000
}
.album-cover{
  width 100%
  height 100%
  border-radius 50%
}
.audio-right{
  flex 1
}
.audio-title{
  line-height initial
  &:after{
    content "-"
    padding 0 6px
  }
}
.audio-artist{
  font-size .875em
  line-height initial
  margin 0
}
.audio-controls{
  display flex
  margin-top 10px
  justify-content space-between
  align-items center
  font-size .875em
}
.audio-bar-wrap{
  flex 1
  height 20px
  margin 0 10px
  position relative
  cursor pointer
}
.audio-pointer{
  width 4px
  height @width
  background-color $cr_main
  position absolute
  top 8px
  left 0
  z-index 9
  border-radius 50%
  box-shadow 0 0 0 4px #39ad8636
  pointer-events none
}
.audio-bar-container{
  height 2px
  margin 9px 0;
  background-color #eee
  position relative
  pointer-events none
}
.audio-loaded, .audio-played{
  position absolute
  left 0
  top 0
  height 100%
}
.audio-loaded{
  background-color #cccccc
}
.audio-played{
  background-color $cr_main
}
.audio-button{
  width 1.2em
  height @width
  background-color transparent
  padding 0
  margin -2px 10px 0 2px
  border 0
  cursor pointer
}
.audio-icon{
  width 100%
  height 100%
  fill $cr_text_2nd
}
.loading{
  display inline-block
  vertical-align -1em
  margin-left 10px
  .audio-icon{
    width 1.8em
    height 2.6em
    fill $cr_text_2nd
  }
}

@keyframes rotating {
  from {
    transform rotate(0deg)
  }
  to {
    transform rotate(360deg)
  }
}
