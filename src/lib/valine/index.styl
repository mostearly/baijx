:global{
  .v{
    *{
      transition color, background-color .3s ease
    }
    .v-wrap{
      border-radius 4px
      margin-bottom 10px
      overflow hidden
      position relative
      padding 10px
      border 1px solid #eee
    }
    .v-input{
      line-height 20px
      width 28%
      padding .6em
      color #4a4a4a
      border none
      box-sizing border-box
      display inline-block
      outline none
      -webkit-appearance none
    }
    .v-submit{
      border 0
      border-radius 4px
      background-color #eee
      box-shadow rgba(0, 0, 0, 0.15) 0 1px 2px 0
      flex 1
      border-top 1px solid #f5f5f5
      color #666
      height 36px
      margin-left 10px
      cursor pointer
      &:disabled{
        color #999
        cursor not-allowed
      }
    }
    @media (max-width 800px){
      .v-submit{
        width 100px
        flex none
        margin-left 0
        margin-top 20px
      }
      .v-input{
        width 100%
        border-bottom 1px solid #eee
        margin 10px 0
      }
    }
    .v-info{
      display flex
      justify-content space-between
      flex-wrap wrap
    }
    .v-textarea{
      min-height 8.75rem
      resize none
      border none
      box-sizing border-box
      width 100%
      color #4a4a4a
      margin-bottom 10px
      padding 10px
      background transparent
    }
    .v-form-message{
      font-size .875em
      color #666
      line-height 30px
      height 0
      overflow hidden
      transition height .6s
    }
    .comments{
      h2{
        font-size 1rem
      }
    }
    .comment{
      display flex
      padding .5em
    }
    @media (max-width 800px) {
      .comment{
        padding 0
      }
    }
    .comment-avatar{
      width 3em
      height 3em
      border-radius 100%
      margin 1.25em .5em
      overflow hidden
      img{
        width 100%
        height 100%
      }
    }
    .comment-inner{
      padding 1.25em .5em
      box-sizing border-box
      width 100%
      .author-link{
        font-size 1.125em
      }
      time{
        color rgba(0, 0, 0, .3)
        font-size .875em
        margin-left 10px
      }
      blockquote, pre{
        margin 10px 0
        background-color #f5f5f5
        padding 6px 10px
        p{
          margin 0
        }
      }
      img{
        max-width 35%
      }
      p{
        margin 10px 0
        width 100%
      }
      .comment-content{
        color #666
      }
    }
  }
}
