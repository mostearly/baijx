@import "~@/assets/styles/variable.styl"
:global{
  .v{
    *{
      transition color, background-color .3s ease
    }
    .v-wrap{
      border-radius 4px
      margin-top 60px
      overflow hidden
      position relative
    }
    .v-input{
      line-height 20px
      width 28%
      padding .6em
      color $color_3
      box-sizing border-box
      display inline-block
      outline none
      border 1px solid $color_5
      -webkit-appearance none
    }
    .v-submit{
      border-radius 4px
      background-color transparent
      border 1px solid $color_5
      color $color_3
      height 36px
      padding 0 2em
      cursor pointer
      &:hover{
        border 1px solid $color_1
        color $color_1
      }
      &:disabled{
        color $color_3
        cursor not-allowed
      }
    }
    @media (max-width 800px){
      .v-submit{
        width 100px
        flex none
        margin-left 0
        margin-top 20px
      }
    }
    .v-info{
      display flex
      justify-content space-between
      flex-wrap wrap
    }
    .v-item{
      p{
        font-size .875rem
        color $color_3
      }
      input{
        border 1px solid $color_5
      }
      width 100%
      margin 10px 0
    }
    .v-textarea{
      min-height 8.75rem
      resize none
      box-sizing border-box
      width 100%
      color $color_3
      margin-bottom 10px
      border 1px solid #d9d9d9
      padding 10px
      background transparent
      font-family 'DejaVu Sans Mono', Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', 'Source Han Serif SC', 'PingFang SC', 'Microsoft YaHei Mono', monospace
      font-size .875rem
    }
    .v-form-message{
      font-size .875em
      color $color_3
      line-height 30px
      height 0
      overflow hidden
      transition height .6s
    }
    .comments{
      margin-top 4em
    }
    .comments-title, .reply-title{
      font-size 1rem
      padding 10px 0
      color $color_3
      border-bottom 1px solid $color_4
    }
    .reply-note{
      color $color_3
      font-size .75rem
    }
    .comment{
      display flex
      padding .5em
      border-bottom 1px solid $color_4
    }
    @media (max-width 800px) {
      .comment{
        padding 0
      }
    }
    .comment-avatar{
      width 3em
      height 3em
      border-radius 100%
      margin 1.25em .5em
      overflow hidden
      img{
        width 100%
        height 100%
      }
    }
    .comment-inner{
      padding 1.25em .5em
      box-sizing border-box
      width 100%
      .author-link{
        color $color_1
        font-size 1rem
        &:hover{
          color $color_1
        }
      }
      time{
        color rgba(0, 0, 0, .3)
        font-size .875em
        margin-left 10px
      }
      h1,h2,h3,h4,h5,h6{
        font-weight 600
      }
      h1{
        font-size 1.3rem
        color #b9282a
      }
      h2{
        font-size 1.2rem
        color #39b9b6
      }
      h3{
        font-size 1.1rem
        color #3f79ca
      }
      h4{
        font-size 1rem
        color #ac8766
      }
      code, pre{
        background-color #f8f8f8
        font-family 'DejaVu Sans Mono', Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', 'Source Han Serif SC', 'PingFang SC', 'Microsoft YaHei Mono', monospace
        padding 6px 10px
        font-size .875rem
      }
      code{
        margin 0 4px
      }
      blockquote{
        margin 10px 0
        background-color $color_4
        padding 6px 10px
        p{
          margin 0
        }
      }
      img{
        max-width 35%
      }
      p{
        margin 10px 0
        width 100%
        font-size .875rem
      }
      .comment-content{
        color $color_2
      }
    }
  }
}
