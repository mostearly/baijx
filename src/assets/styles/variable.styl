$color_1 = #e5b161
$color_2 = #3a3a3a
$color_3 = rgba(0,0,0,.66)
$color_4 = #f5f5f5
$color_5 = #d9d9d9
$center(){
  left 0
  right 0
  top 0
  bottom 0
  margin auto
}
// Please use @block
$mediaMobile(css) {
  @media screen and (max-width: 768px) {
    {css}
  }
}
$mediaPc(css) {
  @media screen and (min-width: 1366px) {
    {css}
  }
}
$mediaPad(css){
  @media screen and (max-width: 1024px) and (min-width: 890px) {
    {css}
  }
}
