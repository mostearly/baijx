// 主色
$color_1 = #4c7b97
// 常用加重文字颜色
$color_2 = #475560
// 所有文字颜色
$color_3 = rgba(0,0,0,.66)
// 分割线。。
$color_4 = #f5f5f5
// 边框线
$color_5 = #d9d9d9
$center(){
  left 0
  right 0
  top 0
  bottom 0
  margin auto
}
// Please use @block
$mediaMobile(css) {
  @media screen and (max-width: 768px) {
    {css}
  }
}
$mediaPc(css) {
  @media screen and (min-width: 1366px) {
    {css}
  }
}
$mediaPad(css){
  @media screen and (max-width: 1024px) and (min-width: 890px) {
    {css}
  }
}
