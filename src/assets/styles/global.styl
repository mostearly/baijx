@import 'common.styl';

:global {
  html, body{
    padding: 0;
    margin: 0;
    -webkit-overflow-scrolling: touch;
    font-size: 15px;
    -webkit-font-smoothing: antialiased;
    font-family: 'Josefin Sans', 'PT Mono', Consolas, 'Sarasa Mono T SC', 'PingFang SC Medium', monospace;
    height: 100%;
  }
  ::-webkit-scrollbar {
    width 8px
    height 8px
    background-color $cr_bg
  }
  ::-webkit-scrollbar-thumb {
    background: $cr_line
    &:hover{
      background: #c2c3c4;
    }
    &:active{
      background: #a1a2a3;
    }
  }
  body {
    font-size: 1rem;
    color: $cr_text;
  }
  ::selection {
    background-color: $cr_main;
    color: $cr_bg;
  }

  article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section {
    display: block;
  }

  h2, h3, h4, h5, h6 {
    margin: 20px 0 15px;
  }

  h1, h2, h3, h4, h5, h6 {
    position: relative;
    margin-top: 1em;
    margin-bottom: 1em;
    font-weight: bold;
    line-height: 1.4em;
  }

  input, textarea, button {
    outline: none;
    -webkit-appearance: none;
  }

  input[type=search]::-webkit-search-cancel-button {
    -webkit-appearance: none;
  }

  ol, ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
    position: relative;
    color: $cr_text;
  }

  .wrapper {
    position: relative;
  }

  .wrapper, div[tabindex][role='group'] {
    outline: 0;
    min-height: 100%;
    //background: radial-gradient(#eee 1px, transparent 0px);
    //background-size: 20px 20px;
    //background-position: 0 0;
    //background-repeat: repeat;
  }

  .icon {
    width: 1em;
    height: 1em;
    padding: 2px 8px 0;
    vertical-align: -2px;
    fill: $cr_text;
    path {
      fill: inherit;
    }
  }
}
