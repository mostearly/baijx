.container{
  // url("https://source.unsplash.com/random/1920x1080/daily"),
  background-image url("https://source.unsplash.com/random/1366x768?nature,water,mountain,flowers,fruits")
  background-color #666
  background-size cover
  background-position center center
  height 100%
  width 100%
  position relative
  overflow hidden
  @media (max-width: 800px){
    background-image url("https://source.unsplash.com/random/375x768?nature,water,mountain,flowers,fruits")
  }
}
.menu{
  display flex
  flex-direction row-reverse
  ul{
    list-style none
    margin 40px
    @media (max-width: 800px){
      margin 20px
    }
    li{
      margin 0 20px
      display inline-block
      a{
        color #fff
        text-decoration none
      }
    }
  }
}
.footer{
  position absolute
  bottom 0
  .link{
    margin 40px
    @media (max-width: 800px){
      margin 20px
    }
    color #fff
  }
  a{
    color #fff
    text-decoration underline
  }
}
