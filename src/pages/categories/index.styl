.category__list{
  margin 40px 0
  .category__item{
    display inline-block
    margin-right 10px
    a{
      padding 6px 10px
      border 1px solid #eee
      color #888
      transition border, color .3s
      border-radius 2px
      &:hover{
        color #444
        border 1px solid #ccc
      }
    }
  }

}
