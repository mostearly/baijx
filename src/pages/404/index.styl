.error-404{
  position relative
  background: radial-gradient(#eee 1px, transparent 0px);
  background-size: 20px 20px;
  background-position: 0 0;
  background-repeat: repeat;
  animation: move 17s linear infinite;
  h1{
    font-size: 1.35em
  }
}

@keyframes move{
  to{
    background-position: 50% 50%;
  }
}
