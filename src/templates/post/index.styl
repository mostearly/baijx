.post{
  .post__data{
    .post__title{
      font-size 1.25em
      color #333
    }
    .post__metadata{
      font-size .875em
      .post__category{
        color #777
      }
      small{
        margin-right: 10px;
        margin-left: 10px;
        color: #777;
      }
      .post__date{
        color: #777;
      }
    }
  }
  .post__content{
    padding 0 10px 2em 10px
    :global{
      .gatsby-resp-image-link{
        width 110%
        margin-left -5%
        border-radius: 4px
      }
      figure{
        margin 0
      }
      .gatsby-resp-image-image{
        cursor zoom-in
      }
    }
    @import "post.styl"
  }
  .post__modified{
    color #999
    font-size .875rem
    display block
    margin 2em 0 1em
  }
  .post__tags{
    margin 2em 0
    font-size .875em
    a{
      padding 1px 5px
      margin-right 1em
      background #f5f5f5
      display: inline-block;
      line-height 26px
    }
    a:hover{
      background #eee
    }
  }
  .post__nav{
    border-top 1px solid #eee
    padding 1em 0
    display flex
    justify-content space-between
  }
}
