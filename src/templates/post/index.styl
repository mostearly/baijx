.post{
  .post__data{
    padding 10px 0 20px 0
    .post__title{
      font-size 1.75em
      font-weight 400
    }
    .post__category{
      color #777
    }
    small{
      margin-right: 10px;
      margin-left: 10px;
      color: #777;
    }
    .post__date{
      color: #777;
    }
  }
  .post__content{
    padding-bottom 2em
    @import "post.styl"
    :global{
      .gatsby-resp-image-image{
        cursor zoom-in
      }
    }
  }
  .post__modified{
    color #999
    font-size .875rem
    display block
    margin 2em 0 1em
  }
  .post__tags{
    margin 2em 0
    a{
      padding 1px 5px
      margin-right 1em
      background #f5f5f5
      display: inline-block;
      line-height 26px
    }
    a:hover{
      background #eee
    }
  }
  .post__nav{
    border-top 1px solid #eee
    padding 1em 0
    display flex
    justify-content space-between
  }
}
