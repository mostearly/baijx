:global{
  h2{
    font-weight: 600
    letter-spacing: 0.5px
    font-size: 1.5em
    line-height: 1.225em
    margin-bottom: 1.875rem
    padding-top: 10px
    color #555
    box-sizing: border-box
    -webkit-column-break-after: avoid
    break-after: avoid-page
    -webkit-column-break-inside: avoid
    break-inside: avoid
  }
  p{
    line-height 28px
  }
  ul{
    list-style disc
    padding-left 2em
    margin 1em 0
    li{
      margin 1em 0
    }
  }
  a{
    color #2c51ca
    &:hover{
      text-decoration underline
    }
  }
  ol{
    list-style decimal
    padding-left 2em
    margin 1em 0
    li{
      margin 1em 0
    }
  }
  blockquote{
    background-color #f5f5f5
    padding 10px 20px
    margin 2em 0
    border-left 4px solid #ccc
  }
  img{
    width 100%
    object-fit cover
    position relative
  }
  pre, code{
    background-color #f5f5f5
    font-family Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace
  }
  code{
    padding 2px 6px
    border: 1px solid #eaeaea
    margin 0 4px
  }
  pre{
    code{
      padding 0
      border: 0
      margin 0
    }
  }
  .gatsby-highlight {
    background-color #f5f5f5
    border-radius: 0.3em
    margin: 1.4em 0
    position relative
    &:hover:after{
      content attr(data-language)
      position absolute
      right 0
      top 0
      text-transform capitalize
      background-color #e5e5e5
      padding 2px 10px
      color #666
    }
    pre[class*="language-"]{
      padding .8em 1em .8em 2.8em
      code[class*="language-"]{
        //border 1px dashed red
      }
      .line-numbers-rows{
        border 0
        padding .8em
        span:before{
          color #cecece
        }
      }
    }
  }
}
