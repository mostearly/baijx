:global{
  h2{
    font-weight: 600;
    letter-spacing: 0.5px;
    line-height: 1.1;
    margin: 30px 0 15px 0;
  }
  p{
    line-height 28px
  }
  ul{
    list-style disc
    padding-left 2em
    margin 1em 0
    li{
      margin 1em 0
    }
  }
  a{
    color #2c51ca
    &:hover{
      text-decoration underline
    }
  }
  ol{
    list-style decimal
    padding-left 2em
    margin 1em 0
    li{
      margin 1em 0
    }
  }
  blockquote{
    background-color #f5f5f5
    padding 10px 20px
    margin 2em 0
    border-left 4px solid #ccc
  }
  img{
    width 100%
    object-fit cover
    position relative
  }
  pre, code{
    background-color #f5f5f5
    font-family "DejaVu Sans Mono", "Source Han Serif SC"
  }
  code{
    padding 0 4px
  }
  pre{
    code{
      padding 0
    }
  }
  .gatsby-highlight {
    background-color #f5f5f5
    border-radius: 0.3em;
    margin: 1.4em 0;
    position relative
    &:after{
      content attr(data-language)
      position absolute
      right 0
      top 0
      text-transform capitalize
      background-color #e5e5e5
      padding 2px 10px
      color #666
    }
    pre[class*="language-"]{
      padding .8em 1em .8em 3.6em
      code[class*="language-"]{
        //border 1px dashed red
      }
      .line-numbers-rows{
        border 0
        padding .8em
        span:before{
          color #cecece
        }
      }
    }
  }
}
