@import "~@/assets/styles/common.styl"

h1 {
  font-size 1.34rem
  color $cr_text
}
h1, h2, h3, h4, h5, h6{
  font-weight normal
  color $cr_text
  letter-spacing 0.5px
  line-height 1.225em
  margin-bottom 2.275rem
  padding-top 1em
  padding-bottom 10px
}
h2 {
  font-size 1.21rem
  color $cr_text
}

h3 {
  font-size 1.13rem
  color $cr_text
}

h4 {
  font-size 1.08rem
  color $cr_text
}

p {
  line-height 28px
}

table {
  width 100%
  border-collapse collapse
  border-spacing 0
  text-align left

  tr {
    background-color #fff
    border-top 1px solid $cr_text
  }

  tr th {
    border-bottom 0
  }

  th {
    padding 6px 18px
    border 1px solid $cr_line
  }

  tr:nth-child(2n) {
    background-color $cr_line
  }

  thead > tr {
    background-color $cr_line
  }

  td {
    padding 6px 18px
    border 1px solid $cr_line
  }
}

.katex-display {
  background-color $cr_line
  padding 16px 0 10px
  color $cr_text
  position relative

  &:hover:after {
    content "Katex"
    position absolute
    font-size .875rem
    right 0
    top 0
    text-transform capitalize
    background-color $cr_line
    padding 2px 10px
    color $cr_text
  }
}
audio{
  width 100%
}
ul {
  list-style disc
  padding-left 2em
  margin 1em 0

  li {
    margin 1em 0
  }
  li.task-list-item {
    list-style none
    margin-left -2em
  }
  input[type=checkbox] {
    font-size 1em

    &:after {
      content 'ðŸŒ¸'
      letter-spacing .3em
      filter grayscale(1)
    }

    &:checked:after {
      content 'ðŸŒ¸'
      letter-spacing .2em
      filter grayscale(0) hue-rotate(130deg)
    }
  }

  :global {
    .task-list-item {
      list-style circle
    }
  }
}

a {
  color $cr_text
  text-decoration underline
  &:hover {
    color $cr_main
  }
}
em{
  font-style: normal;
  border-bottom: 1px dashed grey;
}
ol {
  list-style decimal
  padding-left 2em
  margin 1em 0

  li {
    margin 1em 0
  }
}

blockquote {
  padding 0 0 0 25px
  margin 1.4em 0
  border-left 4px solid $cr_line
}

img {
  max-width 100%
  object-fit cover
}

figure {
  margin 0
}

figcaption {
  margin-left auto
  padding 10px 10px 6px
  color $cr_text
  font-size .8rem
  width fit-content
}

iframe {
  width 104%
  margin-left -2%
}

pre, code {
  background-color #263238
  font-family Consolas, Monaco, 'Ubuntu Mono', 'PingFang SC', 'Microsoft YaHei Mono', monospace
  font-size 14px;
  line-height 1.6
  box-sizing border-box
  @import "code.styl"
}

:not(pre) > code {
  padding 2px 6px
  border 1px solid $cr_line
  margin 0 4px
  border-radius: 2px
  color $cr_text_2nd
  background-color $cr_bg
}

hr {
  margin 40px auto
  border none
  text-align center

  &:after {
    content "â€¢â€¢â€¢"
    letter-spacing 10px
    color $cr_text_2nd
  }
}

pre {
  overflow auto
  code {
    padding 0
    border 0
    margin 0
    background-color transparent
  }
}

.gatsby-highlight {
  background-color #263238
  border-radius 0.3em
  margin 1.4em 0
  position relative

  &:hover:after {
    content attr(data-language)
    position absolute
    right 1px
    top 1px
    background-color $cr_bg_2nd
    padding 4px 10px
    font-size .875rem
    color $cr_bg
  }

  pre[class*="language-"] {
    padding .8em 1em .8em 2.8em

    code[class*="language-"] {
      //border 1px dashed red
    }

    .line-numbers-rows {
      border 0
      padding .8em
    }
  }
}
