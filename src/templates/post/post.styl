:global{
  h1{
    font-size 1.8rem
  }
  h2{
    font-weight: 600
    letter-spacing: 0.5px
    font-size: 1.5em
    line-height: 1.225em
    margin-bottom: 1.875rem
    padding-top: 10px
    color #555
  }
  p{
    line-height 28px
  }
  table{
    width 100%
    border-collapse: collapse
    border-spacing: 0
    text-align left
    tr{
      background-color: #fff
      border-top: 1px solid #ccc
    }
    tr th{
      border-bottom: 0
    }
    th{
      padding: 6px 18px
      border: 1px solid #ddd
    }
    tr:nth-child(2n) {
      background-color: #f8f8f8
    }
    td{
      padding: 6px 18px
      border: 1px solid #ddd
    }
  }
  .katex-display{
    background-color #f8f8f8
    padding 16px 0 10px
    color #888
    position relative
    &:hover:after{
      content "Katex"
      position absolute
      right 0
      top 0
      text-transform capitalize
      background-color #e5e5e5
      padding 2px 10px
      color #666
    }
  }
  ul{
    list-style disc
    padding-left 2em
    margin 1em 0
    li{
      margin 1em 0
    }
    input:after{
      content '[ ]'
      letter-spacing .2em
    }
    input:checked:after{
      content '[x]'
    }
  }
  a{
    color #2c51ca
    &:hover{
      text-decoration underline
    }
  }
  ol{
    list-style decimal
    padding-left 2em
    margin 1em 0
    li{
      margin 1em 0
    }
  }
  blockquote{
    background-color #f8f8f8
    padding 10px 20px
    margin 1.4em 0
    border-left 4px solid #ccc
  }
  img{
    width 100%
    object-fit cover
    position relative
  }
  pre, code{
    background-color #f8f8f8
    font-family Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace
  }
  code{
    padding 2px 6px
    border: 1px solid #eaeaea
    margin 0 4px
  }
  hr{
    height: 1px
    margin: 40px auto
    border: none
    background: #eee
  }
  pre{
    code{
      padding 0
      border: 0
      margin 0
    }
  }
  .gatsby-highlight {
    background-color #f8f8f8
    border-radius: 0.3em
    margin: 1.4em 0
    position relative
    &:hover:after{
      content attr(data-language)
      position absolute
      right 0
      top 0
      text-transform capitalize
      background-color #e5e5e5
      padding 2px 10px
      color #666
    }
    pre[class*="language-"]{
      padding .8em 1em .8em 2.8em
      code[class*="language-"]{
        //border 1px dashed red
      }
      .line-numbers-rows{
        border 0
        padding .8em
        span:before{
          color #cecece
        }
      }
    }
  }
}
